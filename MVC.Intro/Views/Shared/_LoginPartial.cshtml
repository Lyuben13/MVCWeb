@using Microsoft.AspNetCore.Http

@{
    var isSignedIn = !string.IsNullOrEmpty(Context.Session.GetString("UserId"));
    var userName = Context.Session.GetString("UserName");
    var userEmail = Context.Session.GetString("UserEmail");
}

@if (isSignedIn)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-white fw-semibold" href="#" id="userDropdown" role="button" 
           data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle me-1"></i> @userName
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" href="#">
                    <i class="bi bi-person me-2"></i> @userEmail
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i> Изход
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white fw-semibold" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right me-1"></i> Вход
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white fw-semibold" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus me-1"></i> Регистрация
        </a>
    </li>
}

