@model IEnumerable<MVC.Intro.Models.Product>
@using System.Globalization
@{
    ViewData["Title"] = "Продукти";
    var bg = CultureInfo.GetCultureInfo("bg-BG");
}

<!-- HERO -->
<section class="hero-wrap mb-4">
    <div class="hero-card">
        <div class="container">
            <div>
                <h1 class="fw-bold mb-2 text-gradient">Нашите продукти</h1>
                <p class="text-muted mb-3">Открийте най-добрите оферти на едно място</p>
                <a asp-controller="Product" asp-action="Create" class="btn btn-success btn-lg">
                    ➕ Добави нов продукт
                </a>
            </div>
            @* <img src="~/images/shop-banner.svg" alt="Banner" class="hero-img" /> *@
        </div>
    </div>
</section>

<!-- MAIN -->
<div class="container fade-in-up">

    @* Flash messages *@
    @if (TempData["SuccessMessage"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @ok
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @err
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model?.Any() == true)
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card product-card h-100 border-0">
                        <div class="position-relative" style="height:220px; overflow:hidden; border-radius:12px;">
                            @{
                                var imgUrl = !string.IsNullOrWhiteSpace(item.ImagePath)
                                ? Url.Content("~/" + item.ImagePath.TrimStart('/'))
                                : Url.Content("~/images/product-placeholder.svg");
                            }
                            <img src="@imgUrl"
                                 alt="@item.Name"
                                 class="w-100 h-100 object-fit-cover"
                                 onerror="this.onerror=null; this.src='/images/product-placeholder.svg';" />
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="fw-semibold text-primary mb-1">@item.Name</h5>

                            @if (!string.IsNullOrWhiteSpace(item.Category))
                            {
                                <span class="badge bg-secondary mb-2">@item.Category</span>
                            }

                            @if (!string.IsNullOrWhiteSpace(item.Description))
                            {
                                <p class="text-muted small mb-3">@item.Description</p>
                            }

                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <strong class="text-success fs-5">
                                        @item.Price.ToString("C", bg)
                                    </strong>
                                    <span class="badge @(item.InStock ? "bg-success" : "bg-danger")">
                                        @(item.InStock ? "В наличност" : "Изчерпан")
                                    </span>
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                                        👁️ Детайли
                                    </a>
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                        ✏️ Редактирай
                                    </a>
                                    <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-grid">
                                        <button type="submit" class="btn btn-outline-danger"
                                                onclick="return confirm('Сигурни ли сте, че искате да изтриете &quot;@item.Name&quot;?')">
                                            🗑️ Изтрий
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="~/images/product-placeholder.svg"
                 alt="Няма продукти"
                 class="mb-3 opacity-50" style="width:96px;height:96px;" />
            <h3 class="text-muted mb-2">Няма продукти</h3>
            <p class="text-muted">Добавете първия продукт, за да започнете.</p>
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary btn-lg">
                ➕ Добави първи продукт
            </a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


